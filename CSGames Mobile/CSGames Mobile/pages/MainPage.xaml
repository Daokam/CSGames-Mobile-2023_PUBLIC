<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSGames_Mobile.MainPage"
             xmlns:viewModel="clr-namespace:CSGames_Mobile.viewModel"
             x:DataType="viewModel:MainViewModel"
             >
    
    <Grid ColumnDefinitions=".3*,.3*, .3*" RowDefinitions=".15*,.15*, .15*, .15*, .15*, .15*, .15*">
        <Label Grid.Row="0" Text="Temperature"></Label>
        <Label Grid.Column="1" Text="{Binding Temp.Ext_water_temp}" />
        <Label Grid.Column="2" Text="{Binding Temp.Int_temp}" />

         <Label Grid.Row="1" Text="Qualité de l'air"></Label>
        <Label Grid.Row="1" Grid.Column="1" Text="50"></Label>

         <Label Grid.Row="2" Text="Qualité de l'eau"></Label>
        <Label Grid.Row="2" Grid.Column="1" Text="50"></Label>

         <Label Grid.Row="3" Text="Niveau des batteries"></Label>
        <Label Grid.Row="3" Grid.Column="1" Text="50"></Label>

         <Label Grid.Row="4" Text="Nouvelles"></Label>
        <Label Grid.Row="4" Grid.Column="1" Text="50"></Label>

         <Label Grid.Row="5" Text="Transport en commun"></Label>
        <Label Grid.Row="5" Grid.Column="1" Text="50"></Label>

         <Label Grid.Row="6" Text="SOS"></Label>
        <Label Grid.Row="6" Grid.Column="1" Text="50"></Label>


    </Grid>
    

</ContentPage>

